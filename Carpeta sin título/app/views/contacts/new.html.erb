




<!DOCTYPE html>
<html>
<head>
  <title>Reg&iactute;strate</title>
  <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link href='https://fonts.googleapis.com/css?family=Lato:400,300' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" type="text/css" href="css/style.css" media="screen,projection">
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>



  <%= form_for(@contact) do |f| %>
  <div class="container">
    <div class="row">
      <div class="col s12 m12 l12">
        <div id="form-login">
          <div class="row">
            <div class="blue-grey darken-3">
              <h5 class="center login-title" style="color: #FFBA22">Contacto
              </h5>
            </div>
          </div>
          <% @contact.errors.full_messages.each do |message| %>
          <div class="deep-orange accent-2 top-space font-size-new white ">
           ERROR : <%= message %>
          </div>
          <%end%>
          <div class="row">
            <div class="input-field col s6">
               <i class="material-icons prefix">account_circle</i>
                <label for="name">Nombre</label>
                <%=f.text_field :nombre%>
            </div>  
            <div class="input-field col s6">
              <i class="material-icons prefix">picture_in_picture</i>
              <label for="lastname">Rut</label>
              <%=f.text_field :rut %>
            </div>            
          </div>

          <div class="row">
            <div class="input-field col s6">
                  <i class="material-icons prefix">email</i>
                  <label for="email">Correo</label>
                  <%=f.text_field :email %>
            </div>  
            <div class="input-field col s6">
                <i class="material-icons prefix">phone</i>
                <label for="lastname">Telefono</label>
                <%=f.text_field :fono %>
            </div>            
          </div>

          <div class="row">
            <div class="col s12">
              <i class="material-icons prefix">mode_edit</i>
              <label for="name" class="comment-class">Comentarios</label>
              <%=f.text_area :comentario%>
            </div>
          </div>

          <div class="row">
            <div class="col s12" style="color: #FFBA22">
              <%=f.submit "Enviar" ,class:"btn center-align"  %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col s12" style="color: #FFBA22">
      <%= link_to 'Atras', welcome_index_path , class:"btn center-align"%>
    </div>
  </div>
  <%end%>


</body>
</html>