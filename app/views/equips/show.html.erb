<body id="top">
<div id="cv1"  >
	<div class="mainDetails">
		
		<div id="name">
			<h1 class="quickFade delayTwo"><%= @equip.nombre %></h1>
	
		</div>
		
		<div id="contactDetails" class="quickFade delayFour">
			<ul>
				<li>Email: <%= @equip.nombre %>@gmail.com</li>
				
				<li>Telefono: <%= @equip.boss.telefono %></li>
			</ul>
		</div>
		<div class="clear"></div>
	</div>
	
	<div id="mainArea" class="quickFade delayFive">
		<section>
			<article>
				<div class="sectionTitle">
					<h1>Jefe</h1>
				</div>
				
				<div class="sectionContent">
					<h2> <%= @equip.boss.nombre %></h2>
				</div>
			</article>
			<div class="clear"></div>
		</section>
		
		
		<section>
			<div class="sectionTitle">
				<h1>Trabajadores</h1>
			</div>
			
			<div class="sectionContent">

				 <% @workers.each do |worker| %>

                       <h2><%= worker.nombre %>  - <%= worker.rut %>  </h2>

				
					<%end%>
					
			</div>
			<div class="clear"></div>
		</section>
		
		<section>
			<div class="sectionTitle">
				<h1>Comentarios</h1>
			</div>
			
			<div class="sectionContent">



          <h2>No tiene Comentarios</h2>

          
           
 				
			
			</div>
			<div class="clear"></div>
		</section>
		

		
		
		
	</div>

<%= button_to "Editar", edit_equip_path(@equip),
      :class => "waves-effect waves-light btn", :method => :get %>
    


</div>

