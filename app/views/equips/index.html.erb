<p id="notice"><%= notice %></p>

<h1>Listing Equips</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Especialidad</th>
      <th>Boss</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @equips.each do |equip| %>
      <tr>
        <td><%= equip.nombre %></td>
        <td><%= equip.especialidad %></td>
        <td><%= equip.boss %></td>
        <td><%= link_to 'Show', equip %></td>
        <td><%= link_to 'Edit', edit_equip_path(equip) %></td>
        <td><%= link_to 'Destroy', equip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

