<div class="container">
<table class="striped">
        <thead>
          
          <tr>
              <th data-field="id"><i class="material-icons prefix">account_circle</i>Nombre</th>
              <th data-field="name"><i class="material-icons prefix">picture_in_picture</i>Rut</th>
              <th data-field="price"><i class="material-icons prefix">phone</i>Fono</th>
              <th data-field="id"><i class="material-icons prefix">email</i>Email</th>
              <th data-field="id"><i class="material-icons prefix">mode_edit</i>Comentario</th>
          </tr>
        </thead>



<% @contacts.each do |contact| %>


       <tbody>
          <tr>
        <td><%= contact.nombre %></td>
        <td><%= contact.rut %></td>
        <td><%= contact.fono %></td>
        <td><%= contact.email %></td>
        <td><%= contact.comentario %></td>
        <td><%= link_to 'Eliminar', contact, method: :delete, data: { confirm: 'Esta seguro?' } ,class:"waves-effect waves-light btn" %></td>
          </tr>

        </tbody>



<%end%>

      </table>

  <div class="row">
    <div class="col s12" style="color: #FFBA22">
      <%= link_to 'Atras', welcome_index_path , class:"btn center-align"%>
    </div>
  </div>
</div>
